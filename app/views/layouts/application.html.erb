<!DOCTYPE html>
<html>
  <head>
    <title>Mortuary</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
	<nav class="navbar navbar-default">
    		<div class="collapse navbar-collapse">
      			<form class="navbar-form navbar-left none-margin-top-bottom">
    				<%= link_to "", root_path, class: "btn-lg btn-default  btn-outline btn-circle glyphicon glyphicon-home" %>
    				<%= link_to "", corpses_path, class: "btn-lg btn-default  btn-outline btn-circle glyphicon glyphicon-th-list" %>
      			</form>
      			<ul class="nav navbar-nav navbar-right">
      			</ul>
    		</div>
	</nav>
    <div class="container">
    	<% flash.each do |key, value| %>
		<div class="jumbotron statement">
    			<p><%= value %></p>
		</div>
    	<% end %>    
    </div>
    <%= yield %>
  </body>
</html>
