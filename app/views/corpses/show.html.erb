<h1 class="text-center none-margin-top-bottom"><%= @corpse.first_name %> <%= @corpse.last_name %> (<%= @corpse.pesel %>)</h1>

<div class="container">
	<%= form_for @corpse do |f| %>
		<div class="form-group">
			<%= f.label :first_name, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<div class="well less-padding"><%= @corpse.first_name %></div>
				</br>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :last_name, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<div class="well less-padding"><%= @corpse.last_name %></div>
				</br>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :pesel, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<div class="well less-padding"><%= @corpse.pesel %></div>
				</br>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :date_of_birth, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<div class="well less-padding"><%= @corpse.date_of_birth %></div>
				</br>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :date_of_death, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<div class="well less-padding"><%= @corpse.date_of_death %></div>
				</br>
			</div>
		</div>
		<div class="form-group">
			<div class="text-center">
				<%= link_to "", edit_corpse_path(@corpse), class: "btn btn-primary btn-circle btn-outline glyphicon glyphicon-pencil" %>
				<%= link_to "", @corpse, :data => {:confirm => "Are you sure?"}, :method => :delete, class: "btn btn-danger btn-circle btn-outline glyphicon glyphicon-remove" %>
				<%= link_to "", corpses_path, class: "btn btn-default btn-circle btn-outline glyphicon glyphicon-arrow-left" %>
			</div>
		</div>
	<% end %>
</div>